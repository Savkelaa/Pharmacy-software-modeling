<Window x:Class="Pharmacy.Interface.DeleteMedicines"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy.Interface"
        mc:Ignorable="d"
        Title="DeleteMedicines" Height="450" Width="800">
    <Grid>
        <Label Content="Enter the Id of the medicine you want to delete: " HorizontalAlignment="Left" Margin="87,105,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="35" Margin="443,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" FontSize="16"/>
        <Button Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Margin="443,271,0,0" Height="70" FontSize="16" Click="DeleteMedicine_Click"/>

    </Grid>
</Window>
