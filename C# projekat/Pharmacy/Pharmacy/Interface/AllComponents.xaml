<Window x:Class="Pharmacy.Interface.AllComponents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy.Interface"
        mc:Ignorable="d"
        Title="AllComponents" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130*"/>
            <ColumnDefinition Width="550*"/>
            <ColumnDefinition Width="130*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="258*"/>
            <RowDefinition Height="51*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="gridPatient"   SelectionMode="Single"  AutoGenerateColumns="False" Grid.Column="1" Grid.Row="1"  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" />

            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="searchId" HorizontalAlignment="Left" Height="23" Margin="62,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox x:Name="searchName" HorizontalAlignment="Left" Height="23" Margin="71,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="searchManufacturer" HorizontalAlignment="Left" Height="23" Margin="208,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,47,0,0" FontSize="14"/>
        <Label Content="Search by:" HorizontalAlignment="Left" Margin="7,7,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Description:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="69,46,0,0" Grid.Column="1" FontSize="14"/>
        <Label Content="Medicine:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="208,47,0,0" Grid.Column="1" FontSize="14"/>

    </Grid>
</Window>
