<Window x:Class="Pharmacy.Interface.AllComponents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy.Interface"
        mc:Ignorable="d"
        Title="AllComponents" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="128*"/>
            <ColumnDefinition Width="569*"/>
            <ColumnDefinition Width="97*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="258*"/>
            <RowDefinition Height="51*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="gridComponent"   SelectionMode="Single"  AutoGenerateColumns="False" Grid.ColumnSpan="2" Margin="36,59,266,35" Grid.RowSpan="3"  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Name}" Width="20*" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="40*" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200*" />

            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Search by:" Grid.Column="1" HorizontalAlignment="Left" Margin="318,16,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="82"/>
        <Label Content="Name:" Grid.Column="1" HorizontalAlignment="Left" Margin="318,80,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="56"/>
        <Label Content="Description:" Grid.Column="1" HorizontalAlignment="Left" Margin="318,24,0,0" VerticalAlignment="Top" FontSize="16" Grid.Row="1" Height="31" Width="94"/>
        <Label Content="Medicine:" Grid.Column="1" HorizontalAlignment="Left" Margin="318,80,0,0" VerticalAlignment="Top" FontSize="16" Grid.Row="1" Height="31" Width="78"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="419,84,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <TextBox x:Name="tbName" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="419,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontSize="16"/>
        <TextBox x:Name="tbDesc" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="419,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontSize="16" Grid.Row="1"/>
        <TextBox x:Name="tbMedicine" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="419,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontSize="16" Grid.Row="1"/>

    </Grid>
</Window>
