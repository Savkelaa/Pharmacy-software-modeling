<Window x:Class="Pharmacy.Interface.AllPatients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy.Interface"
        mc:Ignorable="d"
        Title="AllPatients" Height="450" Width="800">
    <Grid>

        <DataGrid x:Name="gridPatient"   SelectionMode="Single"  AutoGenerateColumns="False"    HorizontalAlignment="Left" Height="233" Margin="60,131,0,0" VerticalAlignment="Top" Width="400">
            <DataGrid.Columns>
            <DataGridTextColumn Header="Jmbg" Binding="{Binding Jmbg}" />
            <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
            <DataGridTextColumn Header="Password" Binding="{Binding Password}" />
            <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
            <DataGridTextColumn Header="Surname" Binding="{Binding Surname}" />
            <DataGridTextColumn Header="MobilePhone" Binding="{Binding MobilePhone}" />
            
                
                

            </DataGrid.Columns>
        </DataGrid>
        <Button Click="Add_Patient_Click"  Content="Add Patient" HorizontalAlignment="Left" Margin="526,131,0,0" VerticalAlignment="Top" Width="128" Height="47"/>

    </Grid>
</Window>
