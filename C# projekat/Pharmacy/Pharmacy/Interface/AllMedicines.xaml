<Window x:Class="Pharmacy.Interface.AllMedicines"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy.Interface"
        mc:Ignorable="d"
        Title="AllMedicines" Height="450" Width="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="40*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="118*"/>
            <RowDefinition Height="273*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="gridMedicines" SelectionMode="Single" AutoGenerateColumns="False" Grid.Column="1" Grid.Row="1" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Manufacturer" Binding="{Binding Manufacturer}" />
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" />
                <DataGridTextColumn Header="Accepted" Binding="{Binding Accepted}" />
                <DataGridTextColumn Header="Deleted" Binding="{Binding Deleted}" />

            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="searchId" HorizontalAlignment="Left" Height="23" Margin="62,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="searchId_TextChanged"/>
        <TextBox x:Name="searchName" HorizontalAlignment="Left" Height="23" Margin="13,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="searchManufacturer" HorizontalAlignment="Left" Height="23" Margin="150,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="searchPrice" HorizontalAlignment="Left" Height="23" Margin="290,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="searchQuantity" HorizontalAlignment="Left" Height="23" Margin="9,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="2"/>
        <Label Content="Id:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,47,0,0" FontSize="14" Height="29" Width="25"/>
        <Label Content="Search by:" HorizontalAlignment="Left" Margin="7,7,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="82"/>
        <Label Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="11,46,0,0" Grid.Column="1" FontSize="14" Height="29" Width="50"/>
        <Label Content="Manufacturer:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,47,0,0" Grid.Column="1" FontSize="14" Height="29" Width="96"/>
        <Label Content="Price:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="290,47,0,0" Grid.Column="1" FontSize="14" Height="29" Width="43"/>
        <Label Content="Quantity:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,47,0,0" Grid.Column="2" FontSize="14" Height="29" Width="66"/>


    </Grid>
</Window>
