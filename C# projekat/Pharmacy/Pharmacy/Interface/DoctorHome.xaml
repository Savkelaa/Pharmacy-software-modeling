<Window x:Class="Pharmacy.Interface.DoctorHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy.Interface"
        mc:Ignorable="d"
        Title="DoctorHome" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="41*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="205*"/>

        </Grid.RowDefinitions>
        <Button Content="Patients" Grid.Row="1" Grid.Column="1"  Click="Patients_Click"  />
        <Button Content="Medicines" Grid.Row="3" Grid.Column="1"  Click="Medicines_Click"  />
        <Button Content="Add Patient" Grid.Row="1" Grid.Column="3" Click="Add_Patient_Click" />
        <Button Content="Medicines requests" Grid.Row="3" Grid.Column="3" Click="MedicinesRequests_Click" />


    </Grid>
</Window>
